<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="OAuthXFDemo.Views.LoginPage">

    <StackLayout Padding="20">
        <StackLayout Orientation="Horizontal" IsVisible="{Binding TokenExists}">
            <Label Text="Access token expires: " />
            <Label Text="{Binding TokenExpires, StringFormat='{}{0:dd/MM/yyyy hh:mm:ss}'}" />
        </StackLayout>
        <Button HorizontalOptions="Center" VerticalOptions="Center" Text="Login" Command="{Binding AuthenticateUserCommand}" BackgroundColor="DeepSkyBlue" WidthRequest="250" Margin="0,200,0,0" />
    </StackLayout>
  
</ContentPage>